[Unit]
Description=Pi Stat Monitoring Service
After=network.target

[Service]
Type=simple
WorkingDirectory=/home/thatgurjot/pi-monitor
ExecStart=/home/thatgurjot/pi-monitor/pi-monitor-venv/bin/uvicorn app:app --host 0.0.0.0 --port 5000
Restart=on-failure
RestartSec=5

[Install]
WantedBy=default.target
